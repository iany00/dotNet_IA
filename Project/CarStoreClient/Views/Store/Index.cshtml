@model IEnumerable<CarStore.ApiClient.Models.StoreModel>

@{
    ViewData["Title"] = "Stores";
}

<div class="text-center">
    <h1 class="display-4">Stores</h1>
</div>

<table id="storesTable" class="table display" style="width:100%">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Address
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>$(document).ready(function () {
    $("#storesTable").DataTable();
});</script>
}